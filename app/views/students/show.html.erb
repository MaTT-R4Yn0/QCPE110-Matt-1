<div class="container-fluid m-1 bg-success-subtle text-center rounded-2 shadow">
  <span class="fs-1 fw-bold"> Student Info </span>
</div>
<div class="card shadow mt-2 ms-1 me-1 p-2">
  <div class="card-header pt-0 pb-2">
    <h1 class="mb-0 fw-bold"><%= @student.name %></h1>
    <p class="m-0"><%= @student.year_level %> | <%= @student.program %> | <%= @student.department.name %></p>
  </div>

  <div class="card-body p-2">
    <p><strong> No. of Units: </strong> <%= @student.number_of_units %></p>
    <p><strong> Total Assessment: </strong> <%= @student.total_assessment %></p>
    <p><strong> No. of Guardians: </strong> <%= @student.number_of_guardians %></p>
  </div>

  <h4 class="m-1 fw-bold">
    <i class="bi bi-book"></i>
    List of Subjects: 
  </h4>
  <table class="table table-bordered table-striped">
    <thead class="table table-primary">
      <tr>
        <th> Section </th>
        <th> Subject </th>
        <th> Units </th>
        <th> Teacher </th>
      </tr>
    </thead>
    <tbody>
      <% @student.classlists.each do |classlist| %>
        <tr>
          <td><%= classlist.section.name %></td>
          <td><%= classlist.section.subject.name %></td>
          <td><%= classlist.section.subject.number_of_units %></td>
          <td><%= classlist.section.subject.teacher.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-between mt-2 mb-4 align-items-center">
    <div>
      <%= link_to "Back to students", students_path, class: "btn btn-secondary ms-2" %>
    </div>
    <div class="d-flex flex-row">
      <%= link_to edit_student_path(@student), class: "btn btn-warning me-2" do%>
        <i class="bi bi-pencil-square"></i>
        Edit
      <% end %>
      <%= button_to student_path(@student), method: :delete, data: { turbo_confirm: false }, form: { data: { turbo: true } }, class: "btn btn-danger" do %>
        <i class="bi bi-trash"></i>
        Delete
      <% end %>
    </div>  
  </div>
</div>
